<div class="container">
    <h1 class="mt-3">Lista de Terrenos</h1>
    <hr>

    <!-- Lista de Terrenos -->
    <div class="row">
        {{#each terrenos}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <img src="/{{this.imagens.[0].path}}" alt="{{this.imagens.[0].filename}}"
                        class="img-fluid fixed-image" style="cursor: pointer;" data-bs-toggle="modal"
                        data-bs-target="#carouselModal-{{@index}}">
                    <h5 class="card-title">{{this.titulo}}</h5>
                                        <p><strong>Preço:</strong> MZN {{this.preco}}</p>
                    <p><strong>Área:</strong> {{this.area}} m²</p>
                    <p><strong>Descrição:</strong> {{truncate this.descricao 50}}</p>
                    <p><strong>Endereço:</strong> {{this.endereco}}</p>
                </div>
            </div>
        </div>

        <!-- Modal com Carrossel -->
        <div class="modal fade" id="carouselModal-{{@index}}" tabindex="-1"
            aria-labelledby="carouselModalLabel-{{@index}}" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="carouselModalLabel-{{@index}}">{{this.nome}}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="carousel-{{@index}}" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                {{#each this.imagens}}
                                <div class="carousel-item {{#if @first}}active{{/if}}">
                                    <img src="/{{this.path}}" class="d-block w-100" alt="{{this.filename}}">
                                </div>
                                {{/each}}
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{@../index}}"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-{{@../index}}"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
        <!-- Botão para voltar à lista principal de terrenos no canto inferior direito -->
    <div class="d-flex justify-content-end mt-3">
        <a href="/terrenos" class="btn btn-primary">Voltar</a>
    </div>
</div>
