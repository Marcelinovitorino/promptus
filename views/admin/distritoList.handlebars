<h1 class="mt-3 text-center">Lista de Distritos</h1>
<div class="container">
    <hr>
    <div class="row">
        <div class="col-md-12 text-end mb-3">
            <a href="/admin/cadastrar-distrito" class="btn btn-success">
                <i class="fas fa-plus"></i> Cadastrar Novo Distrito
            </a>
        </div>
        {{#each distritos}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.nome}}</h5>
                    <a href="/admin/editar-distrito/{{this._id}}" class="btn btn-warning btn-sm me-2">Editar</a>
                    <a href="/admin/deletar-distrito/{{this._id}}" class="btn btn-danger btn-sm">Deletar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-12">
            <p class="text-center">Nenhum distrito cadastrado ainda.</p>
        </div>
        {{/each}}
    </div>
</div>
