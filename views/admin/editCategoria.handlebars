  <div class="container mt-5">
    <h2 class="mb-4">Edicao de Categoria</h2>
    <form action="/admin/categoria/edit" method="post">
      <div class="mb-3">
        <input type="hidden" name="id" value="{{categoria._id}}">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" name="nome" placeholder="Digite o nome da categoria" required value="{{categoria.nome}}">
      </div>
      <div class="mb-3">
        <label for="slug" class="form-label">Slug</label>
        <input type="text" class="form-control"  name="slug" placeholder="Digite o slug da categoria" required value="{{categoria.slug}}">
      </div>
      <button type="submit" class="btn btn-primary">Editar</button>
    </form>
  </div>