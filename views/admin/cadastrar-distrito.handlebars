<h1 class="mt-3 text-center">Cadastrar Distrito</h1>
<div class="container">
    <hr>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/admin/cadastrar-distrito" method="POST">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome do Distrito</label>
                    <input type="text" class="form-control" id="nome" name="nome" required>
                </div>

                <!-- Campo de Slug -->
                <div class="mb-3">
                    <label for="slug" class="form-label">Slug</label>
                    <input type="text" class="form-control" id="slug" name="slug" required>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar Distrito</button>
            </form>
        </div>
    </div>
</div>

<div>
    <br><br>
</div>
