
<div class="container">
    <!-- Mensagem de erro -->
    {{# each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{/each}}
    <h2 class="text-center mb-4 mt-3">Adicionar Imóvel</h2>
    <hr>
</div>
<div class="container styled-container ">

    <form action="imoveis" method="post" enctype="multipart/form-data">
        <!-- Título -->
        <div class="mb-3">
            <label for="titulo" class="form-label">Título do Imóvel</label>
            <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Digite o título do imóvel">
        </div>

        <!-- Tipo -->
        <div class="mb-3">
            <label for="tipo" class="form-label">Tipo de Imóvel</label>
            <select class="form-select" id="tipo" name="tipo">
                <option value="" disabled selected>Selecione o tipo de imóvel</option>
                {{# each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>
        </div>

        <!-- Descrição -->
        <div class="mb-3">
            <label for="descricao" class="form-label">Descrição</label>
            <textarea class="form-control" id="descricao" name="descricao" rows="4"
                placeholder="Descreva o imóvel"></textarea>
        </div>

        <!-- Endereço -->
        <div class="mb-3">
            <label for="endereco" class="form-label">Endereço</label>
            <input type="text" class="form-control" id="endereco" name="endereco"
                placeholder="Digite o endereço completo">
        </div>

        <!-- Preço -->
        <div class="mb-3">
            <label for="preco" class="form-label">Preço (em MZN)</label>
            <input type="number" class="form-control" id="preco" name="preco" placeholder="Digite o preço do imóvel">
        </div>

        <!-- Imagens -->
        <div class="mb-3">
            <label for="imagens" class="form-label">Imagens</label>
            <input type="file" class="form-control" id="imagens" name="imagens" multiple accept="image/*">
            <small class="form-text text-secondary">Você pode carregar várias imagens.</small>
        </div>
        <!--Distritos-->
        <div class="mb-5">
            <label for="distrito" class="form-label">Distrito</label>
            <select class="form-select" name="distrito"  required>
                <option value="" disabled selected>Selecione o Distrito</option>
                {{# each distritos}}
                <option value="{{_id}}">{{this.nome}}</option>
                {{else}}
                <option value="0">Nenhuma Distrito cadastrado</option>
                {{/each}}
            </select>
        </div>

        <!-- Botão de Enviar -->
        <button type="submit" class="btn btn-primary w-100 ">Adicionar Imóvel</button>
    </form>
    <br>

</div>
