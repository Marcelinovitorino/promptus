<div class="container-fluid">
  <div class="row">
    <!-- Menu Lateral -->
    <div
      class="col-md-3 col-lg-2 bg-dark text-white p-4 d-flex flex-column justify-content-between"
      style="height: 100vh;"
    >
      <div>
        <h3 class="text-center mt-3 fw-bold">Admin PROMPTUS</h3>
        <hr class="border-light" />
        <ul class="nav flex-column mt-3">
          <li class="nav-item mb-3">
            <a class="nav-link text-white text-center p-2 rounded shadow-sm" href="imoveisList">
              <i class="fas fa-home me-2"></i> Imóveis
            </a>
          </li>
          <li class="nav-item mb-3">
            <a class="nav-link text-white text-center p-2 rounded shadow-sm" href="terrenosList">
              <i class="fas fa-map-marker-alt me-2"></i> Terrenos
            </a>
          </li>
          <li class="nav-item mb-3">
            <a class="nav-link text-white text-center p-2 rounded shadow-sm" href="usuariosInteresados">
              <i class="fas fa-users me-2"></i> Usuários Interessados
            </a>
          </li>
          <li class="nav-item mb-3">
            <a class="nav-link text-white text-center p-2 rounded shadow-sm" href="categoriaList">
              <i class="fas fa-tags me-2"></i> Categoria
            </a>
          </li>
          <li class="nav-item mb-3">
            <a class="nav-link text-white text-center p-2 rounded shadow-sm" href="distritoList">
              <i class="fas fa-map-marker-alt me-2"></i> Distrito
            </a>
          </li>
        </ul>
      </div>
      <form action="logOut" method="post">
        <button type="submit" class="nav-link text-white text-center p-2 rounded shadow-sm bg-danger border-0 w-100">
          <i class="fas fa-sign-out-alt me-2"></i> Log-out
        </button>
      </form>
    </div>

    <!-- Conteúdo Principal -->
    <div class="col-md-9 col-lg-10 p-5 bg-light d-flex flex-column" style="min-height: 100vh;">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Bem-vindo ao Painel Administrativo</h1>
        <a href="/" target="_blank" class="btn btn-outline-primary">
          <i class="fas fa-eye me-2"></i> Pré-visualizar o Site
        </a>
      </div>
      <p class="text-muted">Selecione uma opção no menu lateral para gerenciar o site.</p>

      <!-- Seção de Resumo -->
      <div class="row mt-4 flex-grow-1">
        <div class="col-md-6">
          <div class="card shadow-sm border-0 rounded h-30">
            <div class="card-body text-center">
              <h5 class="card-title fw-bold">Total de Imóveis</h5>
              <p id="total-imoveis" class="display-6 text-primary">...</p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card shadow-sm border-0 rounded h-30">
            <div class="card-body text-center">
              <h5 class="card-title fw-bold">Total de Terrenos</h5>
              <p id="total-terrenos" class="display-6 text-warning">...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  async function carregarTotais() {
    try {
      const response = await fetch("/admin/api/totais");
      const data = await response.json();
      document.getElementById("total-imoveis").textContent = data.totalImoveis;
      document.getElementById("total-terrenos").textContent = data.totalTerrenos;
    } catch (error) {
      console.error("Erro ao carregar os totais:", error);
    }
  }
  carregarTotais();
</script>
